-- 120–1000+ FPS | All Hubs 100% Working + NEW: Zeryx Added

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Secret Anti-Lag",
   LoadingTitle = "Loading Secret Anti-Lag...",
   LoadingSubtitle = "by Rayu | Universal FPS BOOSTER",
   ConfigurationSaving = {Enabled = true, FolderName = "SecretAntiLag"},
   KeySystem = false
})

local MainTab         = Window:CreateTab("Main", 4483362458)
local GraphicsTab     = Window:CreateTab("Graphics")
local MonitorTab      = Window:CreateTab("Monitor")
local BladeScriptsTab = Window:CreateTab("Scripts For Blade Ball", 12974959876)
local InfoTab         = Window:CreateTab("Info", 6031075938)

-- Services & FPS/Ping (perfect)
local RunService = game:GetService("RunService")
local Stats      = game:GetService("Stats")
local CurrentFPS = 0
local CurrentPing = 0
local FrameCount = 0
local LastTick = tick()

RunService.Heartbeat:Connect(function()
   FrameCount += 1
   if tick() - LastTick >= 1 then
      CurrentFPS = FrameCount
      FrameCount = 0
      LastTick = tick()
   end
end)

task.spawn(function()
   while task.wait(0.5) do
      pcall(function()
         CurrentPing = Stats.Network.ServerStatsItem["Data Ping"]:GetValue()
      end)
   end
end)

local FPSLabel = MonitorTab:CreateLabel("FPS: Calculating...")
local PingLabel = MonitorTab:CreateLabel("Ping: Calculating...")
RunService.RenderStepped:Connect(function()
   FPSLabel:Set("FPS: " .. CurrentFPS)
   PingLabel:Set("Ping: " .. math.floor(CurrentPing) .. " ms")
end)

-- Anti-Lag (still unbreakable)
local function ApplyAntiLag(state)
   task.spawn(function()
      pcall(function()
         game.Lighting.GlobalShadows = false
         game.Lighting.FogEnd = 9e9
         settings().Rendering.QualityLevel = 1
         game.Workspace.Terrain.WaterWaveSize = 0
         game.Workspace.Terrain.WaterWaveSpeed = 0
      end)
      for _,v in game:GetDescendants() do
         pcall(function()
            if v:IsA("BasePart) then v.CastShadow = false v.Reflectance = 0
            elseif v:IsA("Decal") or v:IsA("Texture") then v.Transparency = 1
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then v.Enabled = false
            end
         end)
      end
      if setfpscap then setfpscap(state and 999 or 60) end
   end)
end

MainTab:CreateToggle({
   Name = "Anti Lag V1 (120–1000+ FPS)",
   CurrentValue = false,
   Callback = function(v) ApplyAntiLag(v) end
})

